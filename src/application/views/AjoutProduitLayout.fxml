<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: white; -fx-border-color: #00796B; -fx-border-width: 2;" fx:controller="application.views.AjoutProduitController">
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
   </padding>
   <children>
      <Label text="Nouveau Produit" textFill="#00796b">
         <font>
            <Font name="System Bold" size="20.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label text="Nom du Produit" textFill="#757575"/>
            <TextField fx:id="txtNom" promptText="Ex: Paracetamol" style="-fx-background-radius: 5;"/>
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Prix de Vente (TND)" textFill="#757575"/>
            <TextField fx:id="txtPrix" promptText="0.00" style="-fx-background-radius: 5;"/>
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="QuantitÃ© Initiale" textFill="#757575"/>
            <TextField fx:id="txtQuantite" promptText="0" style="-fx-background-radius: 5;"/>
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Seuil d'Alerte (Minimial)" textFill="#757575"/>
            <TextField fx:id="txtSeuil" promptText="5" style="-fx-background-radius: 5;"/>
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: #E0E0E0; -fx-text-fill: black;" text="Annuler"/>
            <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false" onAction="#handleSave" style="-fx-background-color: #00796B; -fx-text-fill: white;" text="Enregistrer">
               <font>
                  <Font name="System Bold" size="12.0"/>
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="15.0"/>
         </VBox.margin>
      </HBox>
   </children>
</VBox>

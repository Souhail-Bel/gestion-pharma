<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.views.HistoriqueController">
   <children>
      <SplitPane dividerPositions="0.6" layoutX="200.0" layoutY="120.0" prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <VBox layoutX="57.0" layoutY="56.0" prefHeight="598.0" prefWidth="536.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label style="-fx-padding: 10;" text="Historique des Ventes" textFill="#00796b">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        
                        <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
                           <children>
                              <DatePicker fx:id="datePickerStart" promptText="Du..." prefWidth="110.0" />

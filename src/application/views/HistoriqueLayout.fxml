                        <Label text="Détails de la commande">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblDetailInfo" text="Sélectionnez une vente..." textFill="#616161" wrapText="true" />
                        <TableView fx:id="tableDetails" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colDetProduit" prefWidth="150.0" text="Produit" />
                            <TableColumn fx:id="colDetQte" prefWidth="50.0" text="Qté" />
                              <TableColumn fx:id="colDetTotal" prefWidth="75.0" text="S/Total" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>

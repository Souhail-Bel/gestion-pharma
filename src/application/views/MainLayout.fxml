        </Button>
        
        <Button fx:id="btnFournisseurs" graphicTextGap="20.0" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowFournisseurs" prefHeight="45.0" styleClass="sidebar-btn" text="Fournisseurs">
          <font>
            <Font size="14.0" />
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../res/icons/camion.png" />
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="12.0" />
          </padding>
        </Button>

        <Region VBox.vgrow="ALWAYS" />

        <Separator opacity="0.3" prefWidth="200.0" />
        
        <Button fx:id="btnLogout" graphicTextGap="20.0" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogout" prefHeight="45.0" styleClass="sidebar-btn" text="DÃ©connexion">
          <font>
            <Font size="14.0" />
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">

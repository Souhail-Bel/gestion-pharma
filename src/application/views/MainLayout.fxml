      </children>
    </VBox>
  </left>
  
  <center>
    <StackPane alignment="TOP_LEFT">
      <children>
        <StackPane fx:id="contentArea" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #F4F7F6;" />
        
        <Pane fx:id="dimmer" mouseTransparent="true" opacity="0.0" style="-fx-background-color: black;" visible="false" />
      </children>
    </StackPane>
  </center>

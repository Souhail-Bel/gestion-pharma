            <Font size="14.0" />
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../res/icons/admin.png" />
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="12.0" />
          </padding>
        </Button>
        
        <Button fx:id="btnVente" graphicTextGap="20.0" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowVente" prefHeight="45.0" styleClass="sidebar-btn" text="Caisse / Vente">

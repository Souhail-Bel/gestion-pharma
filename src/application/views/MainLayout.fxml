                <Image url="@../res/icons/medic.png" />
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="12.0" />
          </padding>
        </Button>
        
        <Button fx:id="btnHistorique" graphicTextGap="20.0" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowHistorique" prefHeight="45.0" styleClass="sidebar-btn" text="Historique">
          <font>
            <Font size="14.0" />

<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:id="mainBorderPane" prefHeight="700.0" prefWidth="1000.0" stylesheets="@../application.css" fx:controller="application.views.UI_Controller">
  <left>
    <VBox fx:id="sidebar" prefHeight="700.0" prefWidth="60.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
      <children>
        <Label fx:id="lblTitle" text="Pharma" textFill="WHITE">
          <font>
            <Font name="System Bold" size="24.0"/>

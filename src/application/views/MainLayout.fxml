<BorderPane fx:id="mainBorderPane" prefHeight="700.0" prefWidth="1000.0" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.views.UI_Controller">
  
  <left>
    <VBox fx:id="sidebar" alignment="TOP_CENTER" prefHeight="700.0" prefWidth="60.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
      <children>
         
         <StackPane>
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <children>
               <Circle fill="#e0f2f1" radius="22.0" stroke="#e0f2f1" strokeType="INSIDE" strokeWidth="2.0" />
               
               <ImageView fx:id="imgUserIcon" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../res/icons/admin.png" />
                  </image>
               </ImageView>
            </children>
         </StackPane>

         <Label fx:id="lblTitle" text="PHARMA SYS" textFill="WHITE">

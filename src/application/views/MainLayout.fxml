        </Label>

        <Separator opacity="0.3" prefWidth="200.0" />

        <Button fx:id="btnDashboard" graphicTextGap="20.0" alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowDashboard" prefHeight="45.0" styleClass="sidebar-btn" text="Tableau de Bord">

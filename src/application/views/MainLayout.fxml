          <font>
            <Font size="16.0"/>
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../res/icons/dashboard.png"/>
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="15.0"/>
          </padding>
        </Button>
        <Button fx:id="btnVente" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleShowVente" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-btn" text="Vente / Caisse">
          <font>
            <Font size="16.0"/>
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../res/icons/carte.png"/>
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="15.0"/>
          </padding>
        </Button>
        <Button fx:id="btnStock" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleShowStock" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-btn" text="Stock">
          <font>
            <Font size="16.0"/>
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../res/icons/medic.png"/>
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="15.0"/>
          </padding>
        </Button>
        <Button fx:id="btnHistorique" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleShowHistorique" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-btn" text="Historique">
          <font>
            <Font size="16.0"/>
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../res/icons/hist.png"/>
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="15.0"/>
          </padding>
        </Button>
        <Button fx:id="btnFournisseurs" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleShowFournisseurs" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-btn" text="Fournisseurs">
          <font>
            <Font size="16.0"/>
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../res/icons/camion.png"/>
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="15.0"/>
          </padding>
        </Button>
        <Separator opacity="0.3" prefWidth="200.0">
          <VBox.margin>
            <Insets top="50.0"/>
          </VBox.margin>
        </Separator>
        <Button fx:id="btnAdmin" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleShowAdmin" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-btn" text="Administration">
          <font>
            <Font size="16.0"/>
          </font>
          <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../res/icons/admin.png"/>
              </image>
            </ImageView>
          </graphic>
          <padding>
            <Insets left="15.0"/>
          </padding>
        </Button>
        <Button fx:id="btnLogout" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleLogout" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-btn" text="DÃ©connexion">

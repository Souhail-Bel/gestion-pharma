<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="800.0" fx:controller="application.views.NouvelleCommandeController">
  <top>
    <VBox>
      <children>
        <Label fx:id="lblTitle" text="Nouvelle Commande" style="-fx-font-size: 18px; -fx-font-weight: bold;">
          <padding>
            <Insets bottom="10.0" left="20.0"/>
          </padding>
        </Label>
        <Separator/>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
          <children>
            <Label text="Fournisseur :"/>
            <ComboBox fx:id="comboFournisseur" prefWidth="200.0"/>
          </children>
          <padding>
            <Insets bottom="10.0" left="20.0" top="10.0"/>
          </padding>
        </HBox>
      </children>
    </VBox>
  </top>
  <center>
    <HBox>
      <children>
        <VBox HBox.hgrow="ALWAYS">
          <children>
            <Label text="Catalogue Produits" style="-fx-font-weight: bold;">
              <padding>
                <Insets bottom="5.0"/>
              </padding>
            </Label>
            <TextField fx:id="txtSearchProduit" promptText="Rechercher un produit..."/>
            <TableView fx:id="tableCatalogue" prefHeight="300.0">
              <columns>
                <TableColumn fx:id="colCatNom" prefWidth="200.0" text="Nom"/>
                <TableColumn fx:id="colCatStock" prefWidth="100.0" text="Stock Disponible"/>
              </columns>
            </TableView>
            <Separator>
              <padding>
                <Insets top="10.0"/>
              </padding>
            </Separator>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
              <children>
                <Label text="Quantité :"/>
                <TextField fx:id="txtQte" prefWidth="50.0"/>
                <Label text="Prix Achat :"/>
                <TextField fx:id="txtPrixAchat" prefWidth="80.0" promptText="0.0"/>
                <Button mnemonicParsing="false" onAction="#handleAjouterLigne" text="Ajouter"/>
              </children>
              <padding>
                <Insets top="10.0"/>
              </padding>
            </HBox>
          </children>
          <padding>
            <Insets left="20.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
          <children>
            <Label text="Panier" style="-fx-font-weight: bold;">
              <padding>
                <Insets bottom="5.0"/>
              </padding>
            </Label>
            <TableView fx:id="tablePanier" prefHeight="300.0">
              <columns>
                <TableColumn fx:id="colPanierNom" prefWidth="200.0" text="Nom"/>
                <TableColumn fx:id="colPanierQte" prefWidth="100.0" text="Quantité"/>
                <TableColumn fx:id="colPanierPrix" prefWidth="100.0" text="Prix Achat"/>
                <TableColumn fx:id="colAction" prefWidth="50.0" text=""/>
              </columns>
            </TableView>
            <Separator>
              <padding>
                <Insets top="10.0"/>
              </padding>
            </Separator>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
              <children>
                <Button mnemonicParsing="false" onAction="#handleAnnuler" text="Annuler"/>
                <Button mnemonicParsing="false" onAction="#handleValider" style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-weight: bold;" text="Valider"/>
              </children>
              <padding>
                <Insets top="10.0"/>
              </padding>
            </HBox>
          </children>
          <padding>
            <Insets left="10.0" right="20.0"/>
          </padding>
        </VBox>
      </children>
    </HBox>
  </center>
</BorderPane>

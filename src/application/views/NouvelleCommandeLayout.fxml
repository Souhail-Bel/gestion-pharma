<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="520.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.views.NouvelleCommandeController"
            style="-fx-background-color: #F4F7F6;">

  <top>
    <VBox>
      <Label fx:id="lblTitle" text="Nouvelle Commande Fournisseur" textFill="#00796B"
             style="-fx-font-size: 22px; -fx-font-weight: bold;">
        <padding><Insets bottom="10.0" left="20.0" top="15.0"/></padding>
      </Label>
      <Separator/>
      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 15 20;">
        <Label text="Fournisseur :" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="comboFournisseur" prefWidth="320.0"/>
      </HBox>
    </VBox>
  </top>

  <center>
    <HBox spacing="25.0" style="-fx-padding: 0 20 20 20;">
      <!-- Catalogue -->
      <VBox HBox.hgrow="ALWAYS" spacing="12.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-radius: 8;">
        <Label text="Catalogue Produits" style="-fx-font-weight: bold; -fx-font-size: 15px;"/>
        <TextField fx:id="txtSearchProduit" promptText="Rechercher un produit…"/>
        <TableView fx:id="tableCatalogue" prefHeight="280.0">
          <columns>
            <TableColumn fx:id="colCatNom" text="Produit" prefWidth="220.0"/>
            <TableColumn fx:id="colCatStock" text="Stock" prefWidth="90.0"/>
          </columns>
        </TableView>

        <HBox spacing="12.0" alignment="CENTER_LEFT">
          <Label text="Qté :" minWidth="50.0"/>
          <TextField fx:id="txtQte" prefWidth="80.0" promptText="1"/>
          <Label text="Prix achat :" minWidth="80.0"/>
          <TextField fx:id="txtPrixAchat" prefWidth="100.0" promptText="0.00"/>
          <Button fx:id="btnAjouter" onAction="#handleAjouterLigne" text="Ajouter"
                  style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
      </VBox>

      <!-- Panier -->
      <VBox HBox.hgrow="ALWAYS" spacing="12.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-radius: 8;">
        <Label text="Panier" style="-fx-font-weight: bold; -fx-font-size: 15px;"/>
        <TableView fx:id="tablePanier" prefHeight="280.0">
          <columns>
            <TableColumn fx:id="colPanierNom" text="Produit" prefWidth="220.0"/>
            <TableColumn fx:id="colPanierQte" text="Qté" prefWidth="80.0"/>
            <TableColumn fx:id="colPanierPrix" text="Prix Achat" prefWidth="100.0"/>
            <TableColumn fx:id="colAction" text="" prefWidth="60.0"/>
          </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="15.0">
          <Button onAction="#handleAnnuler" text="Annuler"/>
          <Button onAction="#handleValider" text="Valider Commande"
                  style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
      </VBox>
    </HBox>
  </center>
</BorderPane>
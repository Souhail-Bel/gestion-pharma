<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.views.NouvelleCommandeController">
   <top>
      <VBox spacing="10.0" style="-fx-background-color: #E0F2F1; -fx-padding: 15;" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblTitle" text="Nouvelle Commande Fournisseur" textFill="#00796b">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="Fournisseur :" />
                  <ComboBox fx:id="comboFournisseur" prefWidth="250.0" promptText="Sélectionner un fournisseur..." />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <HBox spacing="20.0" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Catalogue Produits" textFill="#00796b">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtSearchProduit" promptText="Rechercher produit..." />
                  <TableView fx:id="tableCatalogue" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colCatNom" prefWidth="150.0" text="Produit" />
                      <TableColumn fx:id="colCatStock" prefWidth="80.0" text="Stock Actuel" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <TextField fx:id="txtQte" prefWidth="80.0" promptText="Qté" text="10" />
                        <Button defaultButton="true" onAction="#handleAjouterLigne" style="-fx-background-color: #00796B; -fx-text-fill: white;" text="Ajouter &gt;" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <Separator orientation="VERTICAL" prefHeight="200.0" />

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Bon de Commande (Brouillon)" textFill="#00796b">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TableView fx:id="tablePanier" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colPanierNom" prefWidth="150.0" text="Produit" />
                      <TableColumn fx:id="colPanierQte" prefWidth="80.0" text="Qté Commande" />
                      <TableColumn fx:id="colAction" prefWidth="60.0" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT" spacing="15.0">
                     <children>
                        <Button cancelButton="true" onAction="#handleAnnuler" text="Annuler" />
                        <Button onAction="#handleValider" style="-fx-background-color: #2E7D32; -fx-text-fill: white;" text="ENREGISTRER LA COMMANDE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <padding>
                              <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                           </padding>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" prefHeight="700.0" prefWidth="1000.0" fx:controller="application.views.VenteController">
   <center>
      <VBox spacing="10.0" style="-fx-background-color: #F4F7F6; -fx-padding: 20;">
         <children>
            <Label text="Catalogue" textFill="#00796b">
               <font>
                  <Font name="System Bold" size="18.0"/>
               </font>
            </Label>
            <TextField fx:id="txtSearch" promptText="Scanner un code ou taper un nom..." style="-fx-font-size: 14;"/>
            <TableView fx:id="tableCatalogue" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colCatNom" prefWidth="250.0" text="Produit"/>
                  <TableColumn fx:id="colCatPrix" prefWidth="100.0" text="Prix"/>
                  <TableColumn fx:id="colCatStock" prefWidth="80.0" text="Stock"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
               <Button fx:id="btnAjouter" defaultButton="true" onAction="#handleAjouter" style="-fx-background-color: #00796B; -fx-text-fill: white;" text="Ajouter au Panier &gt;"/>
            </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <VBox prefWidth="400.0" spacing="15.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), -5, 0, 0, 0); -fx-padding: 20;" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="5.0" style="-fx-background-color: #E0F2F1; -fx-padding: 10; -fx-background-radius: 5;">
               <children>
                  <Label text="Client" textFill="#00796b">
                     <font>
                        <Font name="System Bold" size="12.0"/>
                     </font>
                  </Label>
                  <HBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="comboClient" maxWidth="1.7976931348623157E308" promptText="Sélectionner Client..." HBox.hgrow="ALWAYS"/>
                        <Button text="+" onAction="#handleNouveauClient" style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-weight: bold;"/>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Separator prefWidth="200.0"/>
            <Label text="Panier en cours" textFill="#424242">
               <font>
                  <Font name="System Bold" size="16.0"/>
               </font>
            </Label>
            <TableView fx:id="tablePanier" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colPanierNom" prefWidth="180.0" text="Produit"/>
                  <TableColumn fx:id="colPanierQte" prefWidth="60.0" text="Qté"/>
                  <TableColumn fx:id="colPanierTotal" prefWidth="80.0" text="Total"/>
               </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Label text="TOTAL:" textFill="#616161">
                     <font>
                        <Font size="18.0"/>
                     </font>
                  </Label>
                  <Label fx:id="lblTotal" text="0.00 TND" textFill="#00796b">
                     <font>
                        <Font name="System Bold" size="24.0"/>
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="btnValider" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleValiderVente" style="-fx-background-color: #2E7D32; -fx-text-fill: white;" text="VALIDER LA VENTE">
               <font>
                  <Font name="System Bold" size="16.0"/>
               </font>
               <padding>
                  <Insets bottom="15.0" top="15.0"/>
               </padding>
            </Button>
            <Label fx:id="lblError" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Erreur" textFill="RED" visible="false" wrapText="true"/>
         </children>
      </VBox>
   </right>
</BorderPane>

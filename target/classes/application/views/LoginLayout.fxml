<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #E0F2F1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.views.LoginController">
   <children>
      <Label text="Pharma Gestion" textFill="#00796b">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Label>
      <Label text="Connectez-vous pour continuer" textFill="#757575">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>

      <VBox alignment="CENTER" maxWidth="300.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <TextField fx:id="txtUser" promptText="Nom d'utilisateur" style="-fx-background-radius: 5; -fx-padding: 10;" />
            <PasswordField fx:id="txtPass" promptText="Mot de passe" style="-fx-background-radius: 5; -fx-padding: 10;" />

            <Button fx:id="btnLogin" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-cursor: hand;" text="SE CONNECTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>

            <Label fx:id="lblError" textFill="#d32f2f" visible="false">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</VBox>
